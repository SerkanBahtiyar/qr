
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Qr oluşturma sayfası</title>
    <style>
        body {
            background-color: #f2f2f2;
        }
    </style>

</head>
<body>
    <div>
        <h2 style="font-family: Arial, sans-serif;">QR OLUŞTURUCU</h2>
        <div>
            @using (Html.BeginForm("Index", "qr", FormMethod.Post))
            {
                <input type="text" name="kod" style="width: 300px; height: 40px;" />

            <input type="submit" value="QR Oluştur" style="width: 200px; height: 50px;" />
               
            }
            <br />
            @if (ViewBag.karekodImage != null)
            {
                <img src="@ViewBag.karekodImage" alt="" style="width:400px;height:400px" />
            }
        </div>
    </div>
</body>
</html>


